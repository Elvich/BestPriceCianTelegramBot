# =============================================================================
# ОСНОВНАЯ КОНФИГУРАЦИЯ BESTPRICECIANTELEGRAMBOT
# =============================================================================

# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# Database Configuration  
DATABASE_URL=sqlite+aiosqlite:///dp.sqlite

# =============================================================================
# НАСТРОЙКИ ПАРСЕРА
# =============================================================================

# Задержки при парсинге (секунды)
PARSER_DELAY=3
PARSER_DEEP_DELAY=2

# Диапазон страниц по умолчанию для парсинга
PARSER_DEFAULT_START_PAGE=1
PARSER_DEFAULT_END_PAGE=17

# Интервал между циклами автоматического парсера (секунды)
AUTO_PARSER_CYCLE_DELAY=1800

# =============================================================================
# API И СЕТЕВЫЕ НАСТРОЙКИ
# =============================================================================

# HTTP запросы
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Конфигурация повторных попыток при сетевых ошибках
NETWORK_RETRY_MAX_ATTEMPTS=3
NETWORK_RETRY_BASE_DELAY=1.0
NETWORK_RETRY_MAX_DELAY=60.0
NETWORK_RETRY_EXPONENTIAL_BACKOFF=true

# =============================================================================
# НАСТРОЙКИ УВЕДОМЛЕНИЙ БОТА
# =============================================================================

# Интервал проверки новых уведомлений (секунды)
NOTIFICATION_CHECK_INTERVAL=30

# Интервал повтора при ошибках уведомлений (секунды)  
NOTIFICATION_ERROR_RETRY_INTERVAL=60

# Максимальное количество уведомлений за раз
MAX_NOTIFICATIONS_PER_BATCH=50

# =============================================================================
# ФИЛЬТРЫ КВАРТИР - ОСНОВНОЙ (DEFAULT)
# =============================================================================

# Ценовые лимиты (рубли)
DEFAULT_FILTER_MAX_PRICE=100000000
DEFAULT_FILTER_MIN_PRICE=5000000

# Минимальная скидка к рыночной цене (проценты)
DEFAULT_FILTER_MIN_MARKET_DISCOUNT=10.0

# Максимальное расстояние до метро (минуты)
DEFAULT_FILTER_REQUIRED_METRO_DISTANCE=10

# Минимальная длина заголовка объявления
DEFAULT_FILTER_MIN_TITLE_LENGTH=20

# =============================================================================
# ФИЛЬТРЫ КВАРТИР - ПРЕМИУМ (PREMIUM)
# =============================================================================

# Ценовые лимиты для премиум фильтра (рубли)
PREMIUM_FILTER_MAX_PRICE=80000000
PREMIUM_FILTER_MIN_PRICE=20000000
PREMIUM_FILTER_MAX_PRICE_PER_SQM=400000

# Минимальная скидка к рыночной цене (проценты)
PREMIUM_FILTER_MIN_MARKET_DISCOUNT=15.0

# Максимальное расстояние до метро (минуты)
PREMIUM_FILTER_REQUIRED_METRO_DISTANCE=8

# Характеристики квартир
PREMIUM_FILTER_MIN_AREA=50.0
PREMIUM_FILTER_MIN_FLOOR=2
PREMIUM_FILTER_MAX_FLOOR=20

# =============================================================================
# ФИЛЬТРЫ КВАРТИР - ОХОТНИК ЗА СКИДКАМИ (BARGAIN HUNTER)
# =============================================================================

# Ценовые лимиты (рубли) - широкие рамки для поиска скидок
BARGAIN_FILTER_MAX_PRICE=150000000
BARGAIN_FILTER_MIN_PRICE=3000000

# Минимальная скидка к рыночной цене (проценты) - высокая планка
BARGAIN_FILTER_MIN_MARKET_DISCOUNT=20.0

# Максимальное расстояние до метро (минуты) - можем пожертвовать удобством
BARGAIN_FILTER_REQUIRED_METRO_DISTANCE=30

# Минимальная длина заголовка объявления
BARGAIN_FILTER_MIN_TITLE_LENGTH=15

# =============================================================================
# ФИЛЬТРЫ КВАРТИР - НАЧАЛЬНАЯ ЗАГРУЗКА (BOOTSTRAP)
# =============================================================================

# Ценовые лимиты для первоначального наполнения БД (рубли)
BOOTSTRAP_FILTER_MAX_PRICE=200000000
BOOTSTRAP_FILTER_MIN_PRICE=1000000

# Минимальная длина заголовка объявления (очень либерально)
BOOTSTRAP_FILTER_MIN_TITLE_LENGTH=5